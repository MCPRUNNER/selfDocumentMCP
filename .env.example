# GitVisionMCP Docker Environment Configuration
# Copy this file to .env and modify as needed

# .NET Environment
DOTNET_ENVIRONMENT=Production

# Logging Configuration
LOGGING_LEVEL=Information
LOG_FILE_PATH=/app/logs/gitvisionmcp.log

# Application Configuration
APP_NAME=GitVisionMCP
APP_VERSION=1.0.0

# Git Configuration (if needed)
GIT_AUTHOR_NAME=GitVisionMCP
GIT_AUTHOR_EMAIL=gitvisionmcp@localhost

# Container Configuration
CONTAINER_USER_ID=1000
CONTAINER_GROUP_ID=1000

# Volume Paths (customize these paths)
HOST_WORKSPACE_PATH=./workspace
HOST_LOGS_PATH=./logs

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=gitvisionmcp
COMPOSE_FILE=docker-compose.yml

# Development Configuration (for dev profile)
DEV_HOT_RELOAD=true
DEV_WATCH_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resource Limits (uncomment and adjust as needed)
# MEMORY_LIMIT=512m
# CPU_LIMIT=0.5

# Network Configuration (if needed)
# NETWORK_MODE=bridge
# EXPOSE_PORTS=false
