{
    "servers": {
        "GitVisionMCP": {
            "type": "stdio",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "c:\\SOURCE\\GitVisionMCP\\GitVisionMCP.csproj",
                "--no-build",
                "--verbosity",
                "quiet"
            ],
            "env": {
                "DOTNET_ENVIRONMENT": "Production"
            }
        },
        "GitVisionMCP-Docker": {
            "type": "stdio",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-i",
                "--name", "gitvisionmcp-mcp",
                "-v", "c:\\SOURCE\\GitVisionMCP\\GitVisionMCP:/workspace:ro",
                "-v", "c:\\SOURCE\\GitVisionMCP\\GitVisionMCP\\logs:/app/logs",
                "mcprunner/gitvisionmcp:latest"
            ],
            "env": {
                "DOTNET_ENVIRONMENT": "Production"
            }
        }
    }
}